{
    "version": 2,
    "builds": [
      {
        "src": "api/index.py",
        "use": "@vercel/python",
        "config": { 
          "runtime": "python3.9",
          "pythonRequirements": "requirements.txt"
        }
      },
      {
        "src": "package.json",
        "use": "@vercel/next"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/index.py"
      },
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ],
    "functions": {
        "api/**": {
            "excludeFiles": "{.next,*.cache,node_modules/**,public/**,app/**,**/*.test.js,**/*.spec.js}"
        }
    },
    "env": {
      "PYTHONPATH": ".:python_api/"
    }
}